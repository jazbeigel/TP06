<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NombreProyecto</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <header>
       <ul class="nav">
  <li class="nav-item">
    <a class="nav-link active" aria-current="page" href="#">Active</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="@Url.Action("Historia", "Home")">Historia</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="@Url.Action("Deportes", "Home")">Deportes</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="@Url.Action("Países", "Home")">Países</a>
  </li>
   <li class="nav-item">
    <a class="nav-link" href="@Url.Action("AgregarDeportista", "Home")">Agregar deportista</a>
  </li>
   <li class="nav-item">
   <a class="nav-link" href="@Url.Action("Creditos", "Home")">Créditos</a>
  </li>
</ul>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer>
        &copy; @DateTime.Now.Year - NombreProyecto
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
