@{
    ViewBag.Title = "Deportes";
    var deportes = ViewBag.Deportes as List<TP06.Models.Deporte>;
}

<div class="container mt-5">
    <h2 class="text-center">Deportes</h2>
    <hr>

    <div class="row">
        @foreach (var deporte in deportes)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@deporte.Nombre</h5>
                        <img  class="card-img-top" src="@deporte.Foto">
                        <a href="@Url.Action("VerDetalleDeporte", "Home", new { idDeporte = deporte.idDeporte })" class="btn btn-primary">Ver Detalles</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

