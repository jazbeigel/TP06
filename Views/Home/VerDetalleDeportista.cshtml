@{
    ViewBag.Title = "Detalle Deportista";
    var deportista = ViewBag.Deporistas as TP06.Models.Deportista;
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            <img src="@deportista.Foto"  class="card-img-top" alt="@deportista.Nombre">
        </div>
        <div class="col-md-8">
            <h2>@deportista.Nombre @deportista.Apellido</h2>
            <p>ID Deportista: @deportista.idDeportista</p>
            <p>Fecha de Nacimiento: @deportista.FechaNacimiento.ToShortDateString()</p>
            <hr>
            <a href="@Url.Action("VerDetalleDeporte", "Home", new { idDeporte = deportista.idDeporte })" class="btn btn-primary">Ver Deporte</a>
            <a href="@Url.Action("VerDetallePais", "Home", new { idPais = deportista.idPais })" class="btn btn-secondary">Ver Pa√≠s</a>
        </div>
    </div>
</div>
