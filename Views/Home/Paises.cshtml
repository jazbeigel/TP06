@{
    ViewBag.Title = "Paises";
}

<div class="container mt-5">
    <div class="row">
        <div class="col">
            <h2 class="text-center">Listado de Países</h2>
            <hr>
        </div>
    </div>
    
    <div class="row">
        @if (ViewBag.Paises != null && ViewBag.Paises.Count > 0)
        {
            foreach (var pais in ViewBag.Paises)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">@pais.Nombre</h5>
                            <p class="card-text">ID: @pais.idPais</p>
                            <p class="card-text">Fecha de Fundacion @pais.FechaFundacion</p>
                            <img src="@pais.Bandera"  class="card-img-top">
                            <a href="@Url.Action("VerDetallePais", "Home", new { idPais = @pais.idPais })" class="btn btn-primary">Ver  @pais.Nombre</a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col">
                <p>No hay países registrados.</p>
            </div>
        }
    </div>
</div>
